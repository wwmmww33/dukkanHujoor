<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #27ae60;
            --danger: #c0392b;
            --light: #f8f9fa;
            --border: #dee2e6;
            --text: #333;
        }
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            background: var(--light); 
            color: var(--text); 
            margin: 0; 
            padding: 20px; 
            line-height: 1.6;
        }
        .container { 
            max-width: 1200px; 
            margin: 0 auto; 
            background: white; 
            padding: 30px; 
            border-radius: 12px; 
            box-shadow: 0 4px 20px rgba(0,0,0,0.08); 
        }
        header {
            text-align: center;
            margin-bottom: 40px;
            border-bottom: 2px solid var(--light);
            padding-bottom: 20px;
        }
        h1 { 
            color: var(--primary); 
            margin: 0;
            font-size: 2rem;
        }
        .subtitle {
            color: #666;
            margin-top: 10px;
        }
        
        .table-container {
            overflow-x: auto;
            border-radius: 8px;
            border: 1px solid var(--border);
            max-width: 100%;
            -webkit-overflow-scrolling: touch;
        }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 15px; text-align: right; border-bottom: 1px solid var(--border); }
        th { 
            background: #f8f9fa; 
            font-weight: 600; 
            color: var(--primary); 
            white-space: nowrap;
        }
        tr:last-child td { border-bottom: none; }
        tr:hover { background: #f8f9fa; }
        
        .amount-in { color: var(--secondary); font-weight: bold; direction: ltr; text-align: right; }
        .amount-out { color: var(--danger); font-weight: bold; direction: ltr; text-align: right; }
        
        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.85rem;
            background: #e9ecef;
            color: #495057;
        }

        /* Tabs Styles */
        .tabs {
            display: flex;
            margin-bottom: 20px;
            border-bottom: 1px solid var(--border);
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            touch-action: pan-x;
            gap: 10px;
            flex-wrap: nowrap;
            align-items: flex-end;
        }
        .tab-btn {
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            background: none;
            font-size: 1rem;
            font-family: inherit;
            color: #666;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
            flex: 0 0 auto;
            white-space: nowrap;
        }
        .tab-btn.active {
            color: var(--secondary);
            border-bottom-color: var(--secondary);
            font-weight: bold;
        }
        .tab-btn i { margin-left: 8px; }
        .tab-btn.member-tab {
            background: #f1c40f;
            color: #2c3e50;
            border-radius: 6px;
            font-weight: bold;
        }
        .tab-btn.member-tab.active {
            border-bottom-color: #f39c12;
        }
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }

        /* Alternating row colors */
        .transactions-table tbody tr:nth-child(even),
        .payments-table tbody tr:nth-child(even),
        .subject-table tbody tr:nth-child(even) {
            background-color: #f9fafb;
        }
        /* Hover effect */
        .transactions-table tbody tr:hover,
        .payments-table tbody tr:hover,
        .subject-table tbody tr:hover {
            background-color: #e9ecef !important;
        }

        @media (max-width: 600px) {
            .tab-btn { padding: 8px 12px; font-size: 0.95rem; }
            .tab-btn i { font-size: 0.95em; }
        }

        /* Expense Card Styles */
        .expense-card {
            background: white;
            border: 1px solid var(--border);
            border-radius: 8px;
            margin-bottom: 20px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .expense-header {
            background: #f8f9fa;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border);
        }
        .expense-title {
            font-weight: bold;
            color: var(--primary);
            font-size: 1.1rem;
        }
        .expense-total {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .table-fit { table-layout: fixed; width: 100%; }
        .table-fit th, .table-fit td { white-space: normal; vertical-align: middle; }
        
        .transactions-table { min-width: 1000px; }
        .transactions-table th:nth-child(1), .transactions-table td:nth-child(1) { width: 50px; text-align: center; padding: 5px; }
        .transactions-table th:nth-child(2), .transactions-table td:nth-child(2) { width: 110px; white-space: nowrap; }
        .transactions-table th:nth-child(3), .transactions-table td:nth-child(3) { width: 150px; overflow-wrap: break-word; }
        .transactions-table th:nth-child(4), .transactions-table td:nth-child(4) { width: 150px; overflow-wrap: break-word; }
        .transactions-table th:nth-child(5), .transactions-table td:nth-child(5) { width: auto; overflow-wrap: break-word; }
        .transactions-table th:nth-child(6), .transactions-table td:nth-child(6) { width: 110px; white-space: nowrap; }
        .transactions-table th:nth-child(7), .transactions-table td:nth-child(7) { width: 120px; white-space: nowrap; }

        .payments-table { min-width: 700px; }
        .payments-table th:nth-child(1), .payments-table td:nth-child(1) { width: 50px; text-align: center; padding: 5px; }
        .payments-table th:nth-child(2), .payments-table td:nth-child(2) { width: 110px; white-space: nowrap; }
        .payments-table th:nth-child(3), .payments-table td:nth-child(3) { width: auto; overflow-wrap: break-word; }
        .payments-table th:nth-child(4), .payments-table td:nth-child(4) { width: 110px; white-space: nowrap; }

        .subject-table { min-width: 900px; }
        .subject-table th:nth-child(1), .subject-table td:nth-child(1) { width: 50px; text-align: center; padding: 5px; }
        .subject-table th:nth-child(2), .subject-table td:nth-child(2) { width: 110px; white-space: nowrap; }
        .subject-table th:nth-child(3), .subject-table td:nth-child(3) { width: 200px; overflow-wrap: break-word; }
        .subject-table th:nth-child(4), .subject-table td:nth-child(4) { width: auto; overflow-wrap: break-word; }
        .subject-table th:nth-child(5), .subject-table td:nth-child(5) { width: 110px; white-space: nowrap; }

        @media (max-width: 600px) {
            th, td { padding: 10px; }
        }

        @media (max-width: 768px) {
            body { padding: 10px; }
            .container { padding: 15px; }
            .table-container { overflow-x: auto; }
        }

        /* Custom Dropdown Styles */
        .custom-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            max-height: 250px;
            overflow-y: auto;
            background: white;
            border: 1px solid var(--border);
            border-radius: 0 0 8px 8px;
            z-index: 10000;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .custom-dropdown-item {
            padding: 12px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
            transition: background 0.2s;
        }
        .custom-dropdown-item:last-child {
            border-bottom: none;
        }
        .custom-dropdown-item:hover {
            background: #f8f9fa;
        }
        .transactions-table th.sortable { cursor: pointer; user-select: none; }
        .transactions-table th .sort-icon { margin-left: 6px; color: #999; }
        .transactions-table th.active .sort-icon { color: var(--secondary); }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>جمعية الخطوة الأهلية</h1>
            <div class="subtitle">نظام تتبع المدخلات والمخرجات المالية</div>
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                <div style="margin-top: 10px; color: var(--secondary); font-weight: bold;">
                    مرحباً، <%= typeof adminName !== 'undefined' ? adminName : 'مدير النظام' %>
                    <a href="/jam3ya/dashboard" style="font-size: 0.9rem; color: var(--primary); margin-right: 10px; text-decoration: none;">(لوحة التحكم)</a>
                </div>
                <% if (typeof memberId !== 'undefined' && memberId) { %>
                    <div style="margin-top: 5px; color: #666; font-size: 0.95rem;">
                        عرض سجل العضو: <%= memberName %> (رقم: <%= memberId %>)
                    </div>
                <% } %>
            <% } else if (typeof isLoggedIn !== 'undefined' && isLoggedIn && typeof memberId !== 'undefined') { %>
                <div style="margin-top: 10px; color: var(--secondary); font-weight: bold;">
                    مرحباً، <%= memberName %> (رقم العضو: <%= memberId %>)
                    <a href="/jam3ya/logout" style="font-size: 0.9rem; color: var(--danger); margin-right: 10px; text-decoration: none;">(تسجيل خروج)</a>
                </div>
            <% } %>
        </header>

        <!-- Search Form (Only for Admins) -->
        <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
        <div style="margin-bottom: 30px; text-align: center;">
            <form action="/jam3ya" method="GET" style="display: inline-flex; gap: 10px; max-width: 100%;">
                <input type="text" name="view_member_code" placeholder="أدخل رقم العضو للبحث..." value="<%= typeof memberId !== 'undefined' ? memberId : '' %>" 
                    style="padding: 10px; border: 1px solid var(--border); border-radius: 6px; width: 200px; font-family: inherit;">
                <button type="submit" style="padding: 10px 20px; background: var(--primary); color: white; border: none; border-radius: 6px; cursor: pointer;">بحث</button>
                <% if (typeof memberId !== 'undefined' && memberId) { %>
                    <a href="/jam3ya" style="padding: 10px 20px; background: var(--danger); color: white; border: none; border-radius: 6px; text-decoration: none; display: inline-block;">إلغاء</a>
                <% } %>
            </form>
        </div>
        <% } %>

        <!-- Login Button for Guests -->
        <% if ((typeof isLoggedIn === 'undefined' || !isLoggedIn) && (typeof isAdmin === 'undefined' || !isAdmin)) { %>
            <div style="margin-bottom: 30px; text-align: center;">
                <a href="/jam3ya/login" style="padding: 10px 25px; background: var(--secondary); color: white; border: none; border-radius: 6px; text-decoration: none; font-weight: bold; font-size: 1.1rem; display: inline-block;">تسجيل دخول الأعضاء</a>
            </div>
        <% } %>
        
        <!-- Global Summary Table -->
        <div class="table-container" style="margin-bottom: 40px;">
            <h3 style="padding: 0 15px; margin-bottom: 10px; color: var(--primary);">الملخص العام للجمعية</h3>
            <table style="min-width: auto; width: 100%;">
                <thead>
                    <tr>
                        <th style="text-align: center; background: #eaf2f8; color: #2c3e50;">الرصيد الابتدائي</th>
                        <th style="text-align: center; background: #e8f5e9; color: #27ae60;">مجموع الإيداعات</th>
                        <th style="text-align: center; background: #fdeaea; color: #c0392b;">مجموع المصروفات</th>
                        <th style="text-align: center; background: #eaf2f8; color: #2c3e50;">الرصيد الحالي</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align: center; font-size: 1.2rem; font-weight: bold; color: #2c3e50;">
                            <%= mainData.initialBalance.toLocaleString('en-US') %> <small style="font-size: 0.8rem;">ر.ع</small>
                        </td>
                        <td style="text-align: center; font-size: 1.2rem; font-weight: bold; color: #27ae60;">
                            <%= mainData.totalIncome.toLocaleString('en-US') %> <small style="font-size: 0.8rem;">ر.ع</small>
                        </td>
                        <td style="text-align: center; font-size: 1.2rem; font-weight: bold; color: #c0392b;">
                            <%= mainData.totalExpense.toLocaleString('en-US') %> <small style="font-size: 0.8rem;">ر.ع</small>
                        </td>
                        <td style="text-align: center; font-size: 1.2rem; font-weight: bold; color: #2c3e50;">
                            <%= mainData.currentBalance.toLocaleString('en-US') %> <small style="font-size: 0.8rem;">ر.ع</small>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-btn active" onclick="openTab(event, 'transactions')"><i class="fa-solid fa-list" style="margin-left:8px;"></i>سجل العمليات العام</button>
            <button class="tab-btn" onclick="openTab(event, 'expenses')"><i class="fa-solid fa-chart-pie" style="margin-left:8px;"></i>تحليل المواضيع</button>
            <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn && memberData) { %>
            <button class="tab-btn member-tab" onclick="openTab(event, 'my-payments')"><i class="fa-solid fa-wallet" style="margin-left:8px;"></i>مدفوعاتي</button>
            <% } %>
        </div>

        <!-- Global Transactions Tab -->
        <div id="transactions" class="tab-content active">
            <div class="table-container">
                <table class="transactions-table table-fit">
                    <thead>
                        <tr>
                            <th id="th-id" class="sortable" onclick="sortGlobalTransactions('id')"># <i id="sortIcon-id" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-date" class="sortable" onclick="sortGlobalTransactions('date')">التاريخ <i id="sortIcon-date" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-subject" class="sortable" onclick="sortGlobalTransactions('subject')">الموضوع <i id="sortIcon-subject" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-item" class="sortable" onclick="sortGlobalTransactions('item')">البند <i id="sortIcon-item" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-details" class="sortable" onclick="sortGlobalTransactions('details')">التفاصيل <i id="sortIcon-details" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-amount" class="sortable" onclick="sortGlobalTransactions('amount')">المبلغ <i id="sortIcon-amount" class="fa-solid fa-sort sort-icon"></i></th>
                            <th id="th-balance" class="sortable" onclick="sortGlobalTransactions('balance')">الرصيد التراكمي <i id="sortIcon-balance" class="fa-solid fa-sort sort-icon"></i></th>
                        </tr>
                    </thead>
                    <tbody id="globalTransactionsBody">
                        <% mainData.transactions.forEach((t, index) => { %>
                        <tr>
                            <td data-label="#">
                                <span style="font-weight: bold; color: #666;"><%= t.id %></span>
                            </td>
                            <td data-label="التاريخ"><%= t.date || '-' %></td>
                            <td data-label="الموضوع"><%= t.subject %></td>
                            <td data-label="البند">
                                <%
                                    var isMemberItem = Array.isArray(membersList) && membersList.some(function(m){ return String(m.member_code) == String(t.item); });
                                    var memberName = null;
                                    if (isMemberItem) {
                                        var foundMember = membersList.find(function(m){ return String(m.member_code) == String(t.item); });
                                        memberName = foundMember && foundMember.name ? foundMember.name : null;
                                    }
                                    var hideItemText = (!isAdmin) && (t.subject === 'مساهمات الاعضاء');
                                %>
                                <%= hideItemText ? '—' : (isMemberItem ? (memberName || t.item) : t.item) %>
                            </td>
                            <td data-label="التفاصيل"><%= t.details || '-' %></td>
                            <td data-label="المبلغ" class="<%= t.amount >= 0 ? 'amount-in' : 'amount-out' %>">
                                <%= t.amount %>
                                <% if (t.is_approved === 0) { %>
                                <span class="badge" style="background:#fff3cd;color:#856404;margin-right:8px;">قيد الموافقة</span>
                                <% } %>
                            </td>
                            <td data-label="الرصيد التراكمي" style="direction: ltr; text-align: right;"><%= t.balance %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- My Payments Tab -->
        <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn && memberData) { %>
        <div id="my-payments" class="tab-content">
            <div class="expense-card" style="border-left: 5px solid var(--secondary);">
                <div class="expense-header" style="background: #e8f5e9;">
                    <div class="expense-title">ملخص مساهماتي</div>
                    <div class="expense-total amount-in">
                        الإجمالي: <%= memberData.totalIncome.toLocaleString('en-US') %> ر.ع
                    </div>
                </div>
            </div>
            
            
            
            <div class="table-container">
                <table class="table-fit payments-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>التاريخ</th>
                            <th>مساهمة عن سنة</th>
                            <th>المبلغ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% memberData.transactions.forEach((t, index) => { %>
                        <tr>
                            <td data-label="#">
                                <span style="font-weight: bold; color: #666;"><%= t.id %></span>
                            </td>
                            <td data-label="التاريخ"><%= t.date || '-' %></td>
                            <td data-label="مساهمة عن سنة"><%= t.details || '-' %></td>
                            <td data-label="المبلغ" class="amount-in">
                                <%= t.amount %>
                                <% if (t.is_approved === 0) { %>
                                <span class="badge" style="background:#fff3cd;color:#856404;margin-right:8px;">قيد الموافقة</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
            <div style="margin-top: 16px;">
                <button type="button" id="toggleNewContributionBtn" style="padding: 12px 20px; background: var(--secondary); color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: bold; font-size:1rem; width:100%;">تسجيل مساهمة جديدة</button>
            </div>
            
            <div id="newContributionSection" style="display:none; margin-top: 12px;">
                <div class="expense-card" style="border-left: 5px solid var(--primary);">
                    <div class="expense-header">
                        <div class="expense-title">تسجيل مساهمة جديدة</div>
                    </div>
                    <div style="padding: 15px;">
                        <form action="/jam3ya/transactions/submit" method="POST" id="memberSubmitForm" style="display: grid; gap: 16px;">
                            <div>
                                <div style="font-weight:600;color:var(--primary);margin-bottom:6px;">السنة</div>
                                <input type="number" name="year" value="<%= new Date().getFullYear() %>" style="padding:12px;border:1px solid var(--border);border-radius:8px;width:100%;font-size:1rem;">
                            </div>
                            <div>
                                <div style="font-weight:600;color:var(--primary);margin-bottom:6px;">المبلغ (ر.ع)</div>
                                <input type="number" step="0.001" name="amount" value="12" required placeholder="0.000" style="padding:12px;border:1px solid var(--border);border-radius:8px;width:100%;font-size:1rem;">
                            </div>
    
                            <div>
                                <button type="button" id="toggleRecipientBtn" style="display:flex;align-items:center;justify-content:center;gap:8px;padding:12px 20px;background: var(--primary); color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: bold; font-size:1rem;width:100%;">
                                    <i class="fa-solid fa-user-plus" style="color:inherit;"></i>
                                    تسجيل المساهمة عن شخص آخر
                                </button>
                            </div>
    
                            <div id="recipientSection" style="display:none;">
                            <div style="font-weight:600;color:var(--primary);margin-bottom:6px;">البحث عن عضو بالاسم</div>
                            
                            <div style="position:relative;">
                                <input type="text" id="recipient_name_input" name="recipient_name" placeholder="اكتب الاسم ثم اختر من القائمة" autocomplete="off" style="padding:12px;border:1px solid var(--border);border-radius:8px;width:100%;font-size:1rem;">
                                
                                <div id="custom-members-dropdown" class="custom-dropdown">
                                    <% if (Array.isArray(membersList)) { membersList.forEach(m => { %>
                                        <div class="custom-dropdown-item" data-name="<%= m.name %>" data-code="<%= m.member_code %>">
                                            <%= m.name %>
                                        </div>
                                    <% }) } %>
                                </div>
                            </div>

                            <input type="hidden" name="target_member_code" id="target_member_code">
                            <div style="font-size:0.9rem;color:#666;margin-top:8px;">إذا تركت الاسم فارغاً سيتم تسجيل المساهمة لنفسك.</div>
                        </div>
    
                            <button type="submit" style="padding: 12px 20px; background: var(--secondary); color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: bold; font-size:1rem;width:100%;">تسجيل المساهمة</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Subjects Analysis Tab -->
        <div id="expenses" class="tab-content">
            <% if (mainData.subjectsList && mainData.subjectsList.length > 0) { %>
                <% mainData.subjectsList.forEach((group, index) => { %>
                <div class="expense-card">
                    <div class="expense-header" onclick="toggleDetails('details-<%= index %>')" style="cursor: pointer;">
                        <div class="expense-title">
                            <span class="toggle-icon" id="icon-details-<%= index %>" style="display: inline-block; width: 20px; transition: transform 0.3s;">▶</span> 
                            <%= group.name %> 
                            <span style="font-size: 0.8rem; color: #666; font-weight: normal;">(آخر تحديث: <%= group.lastDate || 'غير متوفر' %>)</span>
                        </div>
                        <div class="expense-total <%= group.total >= 0 ? 'amount-in' : 'amount-out' %>">
                            الإجمالي: <%= group.total.toLocaleString('en-US') %> ر.ع
                        </div>
                    </div>
                    <div id="details-<%= index %>" class="table-container" style="border: none; border-radius: 0; display: none; border-top: 1px solid var(--border);">
                        <table class="table-fit subject-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>التاريخ</th>
                                    <th>البند</th>
                                    <th>التفاصيل</th>
                                    <th>المبلغ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% group.transactions.forEach(t => { %>
                                <tr>
                                    <td data-label="#"><span style="font-weight: bold; color: #666;"><%= t.id %></span></td>
                                    <td data-label="التاريخ"><%= t.date || '-' %></td>
                                    <td data-label="البند"><%= t.item %></td>
                                    <td data-label="التفاصيل"><%= t.details || '-' %></td>
                                    <td data-label="المبلغ" class="<%= t.amount >= 0 ? 'amount-in' : 'amount-out' %>"><%= t.amount %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div style="text-align: center; padding: 40px; color: #666;">
                    لا توجد بيانات للعرض
                </div>
            <% } %>
        </div>
        
        <div style="margin-top: 30px; text-align: center; color: #888; font-size: 0.9rem;">
            تم تحديث البيانات تلقائياً من النظام
        </div>
    </div>

    <script>
        const globalTransactionsSortState = {};
        function sortGlobalTransactions(field) {
            const tbody = document.getElementById('globalTransactionsBody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const dir = globalTransactionsSortState[field] === 'asc' ? 'desc' : 'asc';
            globalTransactionsSortState[field] = dir;

            function getColIndex(field) {
                if (field === 'id') return 0;
                if (field === 'date') return 1;
                if (field === 'subject') return 2;
                if (field === 'item') return 3;
                if (field === 'details') return 4;
                if (field === 'amount') return 5;
                if (field === 'balance') return 6;
                return 0;
            }
            const idx = getColIndex(field);

            function getVal(row, idx, field) {
                const tds = row.querySelectorAll('td');
                const td = tds[idx];
                if (!td) return '';
                if (field === 'id') {
                    const badge = td.querySelector('.badge');
                    return badge ? badge.textContent.trim() : td.textContent.trim();
                }
                if (field === 'amount' || field === 'balance') {
                    return parseFloat(td.textContent.replace(/[^\d\.\-]/g, '')) || 0;
                }
                if (field === 'date') {
                    const txt = td.textContent.trim();
                    const d = new Date(txt);
                    return isNaN(d.getTime()) ? txt : d.getTime();
                }
                return td.textContent.trim().toLowerCase();
            }

            rows.sort((a, b) => {
                const av = getVal(a, idx, field);
                const bv = getVal(b, idx, field);
                if (typeof av === 'number' && typeof bv === 'number') {
                    return dir === 'asc' ? av - bv : bv - av;
                }
                if (typeof av === 'string' && typeof bv === 'string') {
                    return dir === 'asc' ? av.localeCompare(bv, 'ar', { sensitivity: 'base' }) : bv.localeCompare(av, 'ar', { sensitivity: 'base' });
                }
                return dir === 'asc' ? av - bv : bv - av;
            });
            rows.forEach(r => tbody.appendChild(r));

            ['id','date','subject','item','details','amount','balance'].forEach(f => {
                const th = document.getElementById('th-' + f);
                const icon = document.getElementById('sortIcon-' + f);
                if (th && icon) {
                    th.classList.remove('active');
                    icon.className = 'fa-solid fa-sort sort-icon';
                }
            });
            const currentTh = document.getElementById('th-' + field);
            const currentIcon = document.getElementById('sortIcon-' + field);
            if (currentTh && currentIcon) {
                currentTh.classList.add('active');
                currentIcon.className = dir === 'asc' ? 'fa-solid fa-sort-up sort-icon' : 'fa-solid fa-sort-down sort-icon';
            }
        }

        function openTab(evt, tabName) {
            // Hide all tab content
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].classList.remove("active");
            }

            // Remove active class from all tab links
            tablinks = document.getElementsByClassName("tab-btn");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].classList.remove("active");
            }

            // Show the specific tab content and add active class to the button
            document.getElementById(tabName).classList.add("active");
            evt.currentTarget.classList.add("active");
        }

        function toggleDetails(id) {
            var el = document.getElementById(id);
            var icon = document.getElementById('icon-' + id);
            if (el.style.display === "none") {
                el.style.display = "block";
                if(icon) icon.style.transform = "rotate(90deg)";
            } else {
                el.style.display = "none";
                if(icon) icon.style.transform = "rotate(0deg)";
            }
        }
        
        const membersList = <%- JSON.stringify(membersList || []) %>;
        
        // Custom Dropdown Logic
        const recipientInput = document.getElementById('recipient_name_input');
        const customDropdown = document.getElementById('custom-members-dropdown');
        const codeInput = document.getElementById('target_member_code');
        const dropdownItems = document.querySelectorAll('.custom-dropdown-item');

        if (recipientInput && customDropdown && codeInput) {
            // Show dropdown on focus
            recipientInput.addEventListener('focus', function() {
                filterDropdown(this.value);
            });

            // Hide dropdown on click outside (handled by blur with delay)
            recipientInput.addEventListener('blur', function() {
                setTimeout(() => {
                    customDropdown.style.display = 'none';
                }, 200);
            });

            // Filter on input
            recipientInput.addEventListener('input', function() {
                const val = this.value;
                filterDropdown(val);
                
                // Also update hidden code if exact match typed manually
                const found = membersList.find(m => m && m.name === val);
                codeInput.value = found ? found.member_code : '';
            });

            // Handle item selection
            dropdownItems.forEach(item => {
                item.addEventListener('click', function() {
                    const name = this.getAttribute('data-name');
                    const code = this.getAttribute('data-code');
                    
                    recipientInput.value = name;
                    codeInput.value = code;
                    customDropdown.style.display = 'none';
                });
            });

            function filterDropdown(query) {
                const val = query.toLowerCase();
                let hasVisible = false;
                dropdownItems.forEach(item => {
                    const name = item.getAttribute('data-name').toLowerCase();
                    if (name.includes(val)) {
                        item.style.display = 'block';
                        hasVisible = true;
                    } else {
                        item.style.display = 'none';
                    }
                });
                customDropdown.style.display = hasVisible ? 'block' : 'none';
            }
        }
        const toggleRecipientBtn = document.getElementById('toggleRecipientBtn');
        const recipientSection = document.getElementById('recipientSection');
        if (toggleRecipientBtn && recipientSection) {
            toggleRecipientBtn.addEventListener('click', function() {
                const isHidden = recipientSection.style.display === 'none' || recipientSection.style.display === '';
                recipientSection.style.display = isHidden ? 'block' : 'none';
            });
        }
        const toggleNewContributionBtn = document.getElementById('toggleNewContributionBtn');
        const newContributionSection = document.getElementById('newContributionSection');
        if (toggleNewContributionBtn && newContributionSection) {
            toggleNewContributionBtn.addEventListener('click', function() {
                const isHidden = newContributionSection.style.display === 'none' || newContributionSection.style.display === '';
                newContributionSection.style.display = isHidden ? 'block' : 'none';
            });
        }
    </script>
</body>
</html>
