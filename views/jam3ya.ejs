        const codeInput = document.getElementById('target_member_code');
        const dropdownItems = document.querySelectorAll('.custom-dropdown-item');

        if (recipientInput && customDropdown && codeInput) {
            // Show dropdown on focus
            recipientInput.addEventListener('focus', function() {
                filterDropdown(this.value);
            });

            // Hide dropdown on click outside (handled by blur with delay)
            recipientInput.addEventListener('blur', function() {
                setTimeout(() => {
                    customDropdown.style.display = 'none';
                }, 200);
            });

            // Filter on input
            recipientInput.addEventListener('input', function() {
                const val = this.value;
                filterDropdown(val);
                
                // Also update hidden code if exact match typed manually
                const found = membersList.find(m => m && m.name === val);
                codeInput.value = found ? found.member_code : '';
            });

            // Handle item selection
            dropdownItems.forEach(item => {
                item.addEventListener('click', function() {
                    const name = this.getAttribute('data-name');
                    const code = this.getAttribute('data-code');
                    
                    recipientInput.value = name;
                    codeInput.value = code;
                    customDropdown.style.display = 'none';
                });
            });

            function filterDropdown(query) {
                const val = query.toLowerCase();
                let hasVisible = false;
                dropdownItems.forEach(item => {
                    const name = item.getAttribute('data-name').toLowerCase();
                    if (name.includes(val)) {
                        item.style.display = 'block';
                        hasVisible = true;
                    } else {
                        item.style.display = 'none';
                    }
                });
                customDropdown.style.display = hasVisible ? 'block' : 'none';
            }
        }
